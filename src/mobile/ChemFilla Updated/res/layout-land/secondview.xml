<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical|center_horizontal|center"
    android:orientation="vertical"
    tools:context=".StarterActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical" 
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/syllabus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/topic"
            android:textColor="#33cc00"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/subject"
            android:textColor="#45B4FF"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal|center" 
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >
	
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical" 
             >

        <ImageButton
            android:id="@+id/lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:contentDescription="@string/schoice"
            android:src="@drawable/lessionr" />
        <TextView
            android:id="@+id/txtlesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson"
            android:textColor="#33cc00"
            android:textSize="20sp"
            android:textStyle="bold" />
        
		</LinearLayout>

		<LinearLayout
		    android:layout_width="120dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:gravity="center|top"
		    android:orientation="vertical" >

        <ImageButton
            android:id="@+id/quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:contentDescription="@string/schoice"
            android:src="@drawable/quizr" />
        <TextView
            android:id="@+id/txtquiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quizzes"
            android:textColor="#33cc00"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        </LinearLayout>

		<LinearLayout
		    android:layout_width="120dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:gravity="center|top"
		    android:orientation="vertical" >

        <ImageButton
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:contentDescription="@string/schoice"
            android:src="@drawable/aboutr" />
        <TextView
            android:id="@+id/txtabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textColor="#33cc00"
            android:textSize="20sp"
            android:textStyle="bold" />
        
		</LinearLayout>

		<LinearLayout
		    android:layout_width="120dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:gravity="center|top"
		    android:orientation="vertical" >

        <ImageButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:contentDescription="@string/schoice"
            android:src="@drawable/helpr" />
         <TextView
            android:id="@+id/txthelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textColor="#33cc00"
            android:textSize="20sp"
            android:textStyle="bold" />
         </LinearLayout>
    </LinearLayout>

</LinearLayout>